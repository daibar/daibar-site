---
import { Image } from "astro:assets";
---

<footer class="text-left py-20 pb-6 px-5 max-sm:pb-3 max-sm:pt-4">
  <div class="flex gap-5 justify-center">
    <p class="text-slate-500 self-center text-xs">Copyright 2023. Danny Aibar</p>
    <a
      href="https://github.com/daibar"
      class="hover:-translate-y-1 transition-transform cursor-pointer"
    >
      <Image
        src="/icons/github-icon.svg"
        alt="github-icon"
        width={30}
        height={30}
      />
    </a>
    <a
      href="https://www.linkedin.com/in/danny-aibar-b6ba6021"
      class="hover:-translate-y-1 transition-transform cursor-pointer"
    >
      <Image
        src="/icons/linkedin-icon.svg"
        alt="linkedin-icon"
        width={30}
        height={30}
      />
    </a>
    <a
      href="https://mstdn.social/@daibar"
      class="hover:-translate-y-1 transition-transform cursor-pointer"
    >
      <Image
        src="/icons/mastodon-icon.svg"
        alt="mastodon-icon"
        width={30}
        height={30}
      />
    </a>
  </div>
</footer>
