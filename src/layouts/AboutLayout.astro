---
import Layout from "./Layout.astro";
import Main from "../components/Main.astro";
import H1 from "../components/H1.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
---

<Layout title="Danny Aibar | About">
  <Main>
    <H1 text="About Me" />
    <div class="flex flex-row flex-wrap sm:flex-nowrap">
      <div class="mx-5 mb-3 pt-4 sm:basis-1/3 sm:pt-0">
        <Image src="/images/about.png" width={400} height={400} alt="about" />
        <div class="sm:invisible text-center">&#128071</div>
      </div>
      <div class="sm:basis-2/3">
        <slot/>
      </div>
    </div>
  </Main>
</Layout>
