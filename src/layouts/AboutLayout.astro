---
import Layout from "./Layout.astro";
import Main from "../components/Main.astro";
import H1 from "../components/H1.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
---

<Layout title="Danny Aibar | About">
  <Main>
    <H1 text="About Me" />
    <div class="flex flex-row">
      <div class="initial basis-1/3 mx-5">
        <Image src="/images/about.png" width={400} height={400} alt="about" />
      </div>
      <div class="initial basis-2/3">
        <slot/>
      </div>
    </div>
  </Main>
</Layout>
